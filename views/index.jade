doctype 5
html
	head
		meta(charset="utf-8")
		meta(name='viewport', content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;")
		title= 'Listing Manager - &#946;'
		link(rel="stylesheet", type="text/css", href="bootstrap/css/bootstrap.min.css", media="screen")
		link(rel="stylesheet", type="text/css", href="bootstrap/css/bootstrap-responsive.min.css", media="screen")
		link(rel="stylesheet", type="text/css", href="styles.css")

	body
		div.container
			div.row
				div.span4.offset4
					h3= 'Listing Manager - &#946;'
			div.row
				div.span4

					div.tabbable
						ul.nav.nav-tabs
							li.active
								a(href="#tab1", data-toggle="tab")= "Listings"
							li
								a(href="#tab2", data-toggle="tab")= "Settings"

						div.tab-content
							div.tab-pane.active#tab1
								form#add_listing(action="", method="", name="listings")
									select.span4(name="listing_type")
										option(value='for sale', selected='selected')= 'for sale'
										option(value='housing')= 'housing'
									input.span4(type="text", name="listing_name", placeholder="listing name", autofocus)
									input.span4(type="number", name="listing_min", placeholder="min. price", min="0", max="999999")
									input.span4(type="number", name="listing_max", placeholder="max. price", min="0", max="999999")
									button.btn.btn-primary.center
										i.icon-plus
										strong= " Add"

							div.tab-pane#tab2
								form#add_city
									label= 'add a default city'
									div.input-append
										input.span3(placeholder='city name')
										button.btn
											i.icon-arrow-right
								br
								form#email
									label= 'email'
									div.input-append
										input.span3(placeholder='email@gmail.com')
										button.btn
											i.icon-ok


				div.span8.listings

					table.table.table-striped
						caption
							h4= "Your Listings"
						thead
							tr
								th="Name"
								th="Price Range"
								th.pull-right="Edit"
						tbody
							tr.listing.template
								td
									h5.name
									small.type
								td.price
									span= "$"
									span.min
									span= " - "
									span= "$"
									span.max

								td
									form.edit_listing
										input.listing_id(type='hidden', name='_id', value='')
										div.btn-group.pull-right
											button.btn.btn-info
												i.icon-edit
											button.btn.btn-danger
												i.icon-remove

			hr
			div.row
				div= 'Admin:'
				a(href="/api/listings/reset") DELETE ALL

		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js")
		script(src="bootstrap/js/bootstrap.min.js")
		script(src="client.js")